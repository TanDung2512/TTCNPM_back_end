<% include ../partials/header.ejs %>
    <% include ../partials/sidebar.ejs %>

    <div class="pusher">
        <% include ../partials/navbar.ejs %>

        <div class="custom-container">
            <section class="ui segment" id="user-management">
                <!-- Header -->
                <div class="ui row" id="user-header">
                    <h1 class="ui horizontal divider header">USERS MANAGEMENT</h1>
                </div>
                <!-- /Header -->

                <!-- Search box and Add button -->
                <div class="ui row" id="user-search">
                    <div class="ui grid"5>
                        <div class="eight wide column">
                            <button id="add-user-btn" type="button" class="ui grey basic button">
                                Add new user &nbsp;
                                <i class="user icon"> </i>
                            </button>
                        </div>
                        <div class="eight wide right floated column" >
                            <div class="ui icon fluid input">
                                <input id="search-user" class="prompt" type="text" placeholder="Search user by email...">
                                <i class="inverted circular search link icon"></i>
                            </div>
                            <div class="results"></div>
                        </div>
                    </div>
                </div>
                <!-- /Search box and Add button -->

                <!-- Table -->
                <div class="ui row" id="user-table">
                    <table class="ui celled padded table">
                        <thead>
                            <tr>
                                <th class="center aligned">ID</th>
                                <th class="center aligned">Email</th>
                                <th class="center aligned">Phone</th>
                                <th class="center aligned">Gender</th>
                                <th class="center aligned single line">First name</th>
                                <th class="center aligned single line">Last Name</th>
                                <th class="center aligned single line">Address</th>
                                <th class="center aligned ">Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="8">
                                    <div class="ui right floated pagination menu" id="page">
                                        <a class="icon item">
                                            <i class="left chevron icon"></i>
                                        </a>
                                        <a class="item">1</a>
                                        <a class="item">2</a>
                                        <a class="item">3</a>
                                        <a class="item">4</a>
                                        <a class="item">5</a>
                                        <a class="icon item">
                                            <i class="right chevron icon"></i>
                                        </a>
                                    </div>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- Table -->

            </section>

            <!-- Modal -->
            <div class="ui modal" id="add-user-modal">
                <!-- {{!-- Close icon --}} -->
                <i class="close icon close-modal-btn"></i>
                <!-- {{!-- /Close icon --}} -->

                <!-- {{!-- Model header --}} -->
                <div class="header">
                    New user information
                </div>
                <!-- {{!-- /Model header --}} -->
                <div class="content">
                    <div class="ui grid">
                        
                        <!-- User email -->
                        <div class="eight wide column">
                            <h3 class="ui label">Email</h3>
                        </div>
                        <div class="eight wide column">
                            <div class="ui fluid input focus">
                                <input type="text" placeholder="quandxbp@gmail.com" name="modalUserMail">
                            </div>
                        </div>
                        <!-- /User email -->

                        <!-- User Password -->
                        <div class="eight wide column">
                            <h3 class="ui label">Password</h3>
                        </div>
                        <div class="eight wide column">
                            <div class="ui fluid input">
                                <input type="password" placeholder="Enter your password" name="modalUserPassword">
                            </div>
                        </div>
                        <!-- /User Password -->

                        <!-- User phone -->
                        <div class="eight wide column">
                            <h3 class="ui label">Phone number</h3>
                        </div>
                        <div class="eight wide column">
                            <div class="ui fluid input">
                                <input type="text" placeholder=" 0123456798" name="modalUserPhone">
                            </div>
                        </div>
                        <!-- /User phone -->

                        <!-- User gender -->
                        <div class="eight wide column">
                            <h3 class="ui label">Gender</h3>
                        </div>
                        <div class="eight wide column">
                            <div class="ui radio checkbox">
                                <input type="radio" name="modalUserGender" checked="checked" value="0">
                                <label>Male</label>
                            </div>
                            <div class="ui radio checkbox">
                                <input type="radio" name="modalUserGender" value="1">
                                <label>Female</label>
                            </div>
                        </div>
                        <!-- /User gender -->

                        <!-- User First name -->
                        <div class="eight wide column">
                            <h3 class="ui label">First name</h3>
                        </div>
                        <div class="eight wide column">
                            <div class="ui fluid input">
                                <input type="text" placeholder="Bùi" name="modalUserFirstname">
                            </div>
                        </div>
                        <!-- /User First name -->

                        <!-- User last name -->
                        <div class="eight wide column">
                            <h3 class="ui label">Last name</h3>
                        </div>
                        <div class="eight wide column">
                            <div class="ui fluid input">
                                <input type="text" placeholder="Quân" name="modalUserLastname">
                            </div>
                        </div>
                        <!-- User last name -->

                        <!-- User address -->
                        <div class="eight wide column">
                            <h3 class="ui label">Address</h3>
                        </div>
                        <div class="eight wide column">
                            <div class="ui fluid input">
                                <input type="text" placeholder="497, Hoa Hao, P.7, Q.10" name="modalUserAddress">
                            </div>
                        </div>
                        <!-- User address -->
                        
                    </div>

                </div>
                <!-- {{!-- Modal Footer --}} -->
                <div class="actions">
                    <div class="ui negative left labeled left floated icon button close-modal-btn">
                        Close
                        <i class="times icon"></i>
                    </div>
                    <div id="finish-create-user-btn" class="ui positive right labeled icon button">
                        Finish
                        <i class="checkmark icon"></i>
                    </div>
                </div>
                <!-- {{!-- /Modal Footer --}} -->
            </div>
            <!-- Modal -->
        </div>


        
<% include ../partials/footer.ejs %>